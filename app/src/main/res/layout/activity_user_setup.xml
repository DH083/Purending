<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Walk.UserSetup"
    android:background="@color/back"
    android:orientation="vertical"
    android:weightSum="15">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/back"
        android:scaleType="centerCrop"
        android:src="@drawable/chevron_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:layout_marginBottom="30dp"
        android:padding="20dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:id="@+id/totalMaxStep_lt"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.162"
                android:orientation="horizontal"
                android:weightSum="1">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/totalMaxStep_ev"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:minHeight="48dp"
                    android:hint="목표 걸음 수"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/btn"
                    android:textColorHint="@color/btn"
                    android:fontFamily="@font/num"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/step_unit_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:minHeight="48dp"
                    android:paddingTop="18dp"
                    android:text="걸음"
                    android:fontFamily="@font/pretendard"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/btn"
                    />
            </LinearLayout>

        <Button
            android:id="@+id/go_bt"
            style="@style/MaterialAlertDialog.Material3"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:minHeight="48dp"
            android:background="@drawable/button"
            android:text="시작하기"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/bitbit"
            android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.7"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        app:itemIconSize="30dp"
        app:menu="@menu/bottom_navigation"
        android:background="@color/btn"
        app:itemIconTint="@color/white"/>
        />
</LinearLayout>