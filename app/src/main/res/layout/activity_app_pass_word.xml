<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".AppLock.AppPassWordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/puding"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/etInputInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:text="비밀번호를 입력하세요."
            android:fontFamily="@font/pretendard"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_passcodes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/etPasscode1"
            android:gravity="center"
            android:maxLength="1"
            android:textColor="#2E2121"
            android:textSize="40sp"
            android:inputType="textPassword|number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:fontFamily="@font/bitbit"
            android:singleLine="true">
            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/etPasscode2"
            android:gravity="center"
            android:maxLength="1"
            android:textColor="#2E2121"
            android:textSize="40sp"
            android:inputType="textPassword|number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:fontFamily="@font/bitbit"
            android:singleLine="true">
        </EditText>

        <EditText
            android:id="@+id/etPasscode3"
            android:gravity="center"
            android:maxLength="1"
            android:textColor="#2E2121"
            android:textSize="40sp"
            android:inputType="textPassword|number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:fontFamily="@font/bitbit"
            android:singleLine="true">
        </EditText>

        <EditText
            android:id="@+id/etPasscode4"
            android:gravity="center"
            android:maxLength="1"
            android:textColor="#2E2121"
            android:textSize="40sp"
            android:inputType="textPassword|number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:fontFamily="@font/bitbit"
            android:singleLine="true">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">
        <TableLayout
            android:id="@+id/tl_keys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:shrinkColumns="*"
            android:stretchColumns="*" >
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TableRow>

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:text="1"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/num"
                    app:backgroundTint="#564444" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:text="2"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/num"
                    app:backgroundTint="#564444" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="3"
                    android:textSize="25dp"
                    android:fontFamily="@font/num"
                    app:backgroundTint="#564444" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:text="4"
                    android:textSize="25dp"
                    android:fontFamily="@font/num"
                    app:backgroundTint="#564444" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:text="5"
                    android:textSize="25dp"
                    android:fontFamily="@font/num"
                    app:backgroundTint="#564444" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:text="6"
                    android:textSize="25dp"
                    android:fontFamily="@font/num"
                    app:backgroundTint="#564444" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:text="7"
                    android:textSize="25dp"
                    android:fontFamily="@font/num"
                    app:backgroundTint="#564444" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:text="8"
                    android:textSize="25dp"
                    android:fontFamily="@font/num"
                    app:backgroundTint="#564444" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:text="9"
                    android:textSize="25dp"
                    android:fontFamily="@font/num"
                    app:backgroundTint="#564444" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:text="CLEAR"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:fontFamily="@font/num"
                    android:textColor="@color/btn"
                    app:backgroundTint="#FFF6D5" />

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:text="0"
                    android:textSize="25dp"
                    android:fontFamily="@font/num"
                    app:backgroundTint="#564444" />

                <Button
                    android:id="@+id/btnErase"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:text="DEL"
                    android:layout_margin="1dp"
                    android:textColor="@color/btn"
                    android:textSize="15dp"
                    android:fontFamily="@font/num"
                    app:backgroundTint="#FFF6D5" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>
